.footer-map {
    height: 196px;
    overflow: hidden;
    transition: height 0.4s;
    position: relative;
    margin-top: -1px;
    &_active {
        height: 378px;
    }
    &__map-holder {
        width: 100%;
        height: 100%;
        position: relative;
    }

}
.map-bullet {
    position: absolute;
    width: 43px;
    height: 39px;
    bg("bullet.png");
    text-indent: -9999px;
    overflow: hidden;
    top: 0;
    left: 0;
    margin: -34px 0 0 -12px;
}
.map-popup {
    position: absolute;
    left: 136px;
    top: 34px;
    width: 319px;
    padding: 52px 8px 14px;
    z-index: 10;
    background: #fff;
    background: rgba(255,255,255,0.95);
    &__close {
        position: absolute;
        width: 14px;
        height: 14px;
        bg("close.png");
        text-indent: -9999px;
        overflow: hidden;
        left: 50%;
        top: 14px;
        margin-left: -7px;
    }
    &__logo {
        text-align: center;
        margin: 0 0 27px;
    }
    &__info {
        margin: 0;
        padding: 0 10px 0 30px;
        overflow: hidden;
        font-size: 14px;
        line-height: 18px;
        &-dt {
            float: left;
            margin: 0 5px 0 0;
            color: $gray;
            width: 65px;
        }
        &-dd {
            overflow: hidden;
            letter-spacing: 1px;
            padding-bottom: 18px;
            font-size: 15px;
            font-family: "helveticaneuecyrroman", helvetica,arial,sans-serif;
            color: $darkColor1;
        }
    }
    &__phone-row {
        margin: 8px 0 0;
        &:first-child {
            margin: 0;
        }
    }
}