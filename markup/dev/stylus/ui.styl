.btn-ico {
	margin: 10px 10px 0 0;
}
.blue-btn,
.orange-btn {
	display: inline-block;
	vertical-align: top;
	height: 46px;
	padding: 0 17px;
	min-width: 137px;
	color: #fff;
	font-size: 18px;
	line-height: 46px;
	border:1px solid $blue;
	overflow: hidden;
	letter-spacing: 1px;
	text-align: center;
	position: relative;
	background: $blue;
	text-decoration: none;
	transition: background 0.1s, border-color 0.1s, box-shadow 0.1s;
	&:hover {
		background: $hoverBlue;
	}
	&:active {
		background:$hoverBlue;
		border-color:$borderBlue;
		box-shadow: 0 0 2px rgba(0,0,0,0.4) inset;
	}
	input {
		position: absolute;
		right: 0;
		top: 0;
		width: 400px;
		font-size: 0;
		line-height: 400px;
		background: none;
		padding: 0;
		margin: 0;
		border:0;
		cursor: pointer;
		height: 400px;
	}
}
.orange-btn {
	background: $orange;
	border-color: $orange;
	&:hover {
		background: $hoverOrange;
		border-color: $hoverOrange;
	}
	&:active {
		background: $hoverOrange;
		border-color: $orange;
		box-shadow: 0 0 2px rgba(0,0,0,0.4) inset;
	}
}
.light-gray-btn {
	display: inline-block;
	vertical-align: top;
	position: relative;
	height: 46px;
	padding: 0 23px;
	min-width: 125px;
	color: $darkColor1;
	letter-spacing: 0.5px;
	overflow: hidden;
