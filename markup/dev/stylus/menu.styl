.menu {
    overflow: hidden;
    padding-bottom: 32px;
    border-top: 1px solid $borderGray;
    padding-top: 50px;
    &_category {
        border-top: none;
        padding-top: 30px;
    }
    &__column {
        float: left;
        width: 220px;
        margin: 0 0 0 32px;
        &:first-child {
            margin: 0;
        }
    }
    &_category &__column {
        width: 304px;
        margin: 0 0 0 32px;
        &:first-child {
            margin: 0;
        }
    }
    &_expand &__title.active + &__list {
        display: block;
    }
    &_expand &_list {
        display: none;
    }
    &__list {
        font-size: 15px;
        line-height: 22px;
        list-style: none;
        padding: 0 0 27px 3px;
        margin: 0;
        &_none-title {
            padding-top: 35px;
        }
        &-item {
            margin: 0 0 8px;
        }
        a {
            color: $gray;
            text-decoration: none;
            &:hover {
                color: $blue;
            }
        }
    }
    &__title {
        font: 17px/18px "helveticaneuecyrroman", helvetica,arial,sans-serif;
        margin: 0 0 17px;
        letter-spacing: 1px;
        color: $darkColor1;
        text-transform: uppercase;
        &:after {
            content: '';
            display: block;
            clear: both;
        }
        a {
            color: $darkColor1;
            text-decoration: none;
            &:hover {
                color: $blue;
            }
        }
        & + & {
            padding-top: 5px;
        }
    }
    &__expander {
        float: left;
        width: 11px;
        margin: 2px 0 0 -20px;
        text-indent: -9999px;
        cursor: pointer;
        overflow: hidden;
        height: 11px;
        bg("expand.gif");
        &:hover {
            opacity: 0.8;
        }
    }
    &_expand &__title.active &__expander {
        background-position: 0 -34px;
    }
    &__count {
        color: $blue;
        font-family: "helveticaneuecyrlight", helvetica,arial,sans-serif;;
        margin-left: 5px;
    }
}