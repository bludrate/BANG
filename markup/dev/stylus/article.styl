.article {
	&__general {
		position: relative;
		min-height: 280px;
		margin-bottom: 32px;
		&-visual {
			position: absolute;
			left: 0;
			top: 0;
			right: 0;
			bottom: 0;
			overflow: hidden;
			img{
				width: 100%;
				height: auto;
				min-height: 100%;
			}
		}
		&-info {
			width: 50%;
			padding: 55px 0 37px 50px;
			&-holder {
				width: $wrapperWidth;
				margin: 0 auto;
				position: relative;
				z-index: 2;
			}
		}
	}
	&__date {
		color: $gray;
		font: 20px/24px "helveticaneuecyrthin", Helvetica, arial, sans-serif;
		margin: 0 0 12px -40px;
		padding: 0 0 0 40px;
		letter-spacing: 2px;
		bg("ico05.png",0,50%)
	}
	&__title {
		text-transform: uppercase;
		letter-spacing: 3px;
		margin-bottom: 22px;
		font: 34px/48px "helveticaneuecyrthin", helvetica, arial, sans-serif;
		a {
			color: $textColor;
			text-decoration: none;
			&:hover {
				color: $blue;
			}
		}
	}
	&__description {
		font-size: 18px;
		line-height: 28px;
		color: $darkColor1;
		min-height: 100px;
	}
	&__text {
		width: 670px;
		padding: 0 0 1px 50px;
		font-size: 16px;
		line-height: 28px;
		color: $gray;
		p {
			margin:0 0 28px;
		}
	}
	&__product-list {
		padding: 50px 0 39px;
		.dot-title {
			padding-left: 30px;
		}
	}
	&__nav {
		overflow: hidden;
		padding: 0 0 10px;
		&-dir {
			text-transform: uppercase;
			font-size: 13px;
			line-height: 16px;
			letter-spacing: 2px;
			a {
				color:$darkColor1;
				text-decoration: none;
				display: block;
				margin: 0 0 25px -25px;
				padding-left: 27px;
				&:hover {
					color: $blue;
				}
			}
		}
		&-date {
			color: $gray;
			letter-spacing: 1.5px;
			margin: 0 0 7px;
			font: 16px/20px "helveticaneuecyrthin",helvetica, arial, sans-serif;
		}
		&-title {
			font-size: 16px;
			line-height: 24px;
			text-transform: uppercase;
			letter-spacing: 2px;
			padding-left: 3px;
			a {
				color: $darkColor1;
				text-decoration: none;
				&:hover {
					color:$blue;
				}
			}
		}
	}
	&__prev {
		float: left;
		padding-left: 25px;
		width: 400px;
	}
	&__prev &__nav-dir a{
		bg('arrow3.png',0,1px);
	}
	&__next {
		width: 400px;
		float: right;
		padding-left: 25px;
	}
	&__next &__nav-dir a{
		bg("arrow4.png", 0,1px)
	}
}
