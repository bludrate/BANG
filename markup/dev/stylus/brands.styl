.letter-nav {
    margin: 0 0 30px;
    text-align: center;
    font: 16px/20px "helveticaneuecyrroman", helvetica, arial, sans-serif;
    a {
        color: $gray;
        text-decoration: none;
        padding: 0 4px 0 3px;
        &:hover,
        &.active {
            color: $blue;
        }
    }
}
.brands {
    overflow: hidden;
    &-list {
        list-style: none;
        padding: 0;
        margin: -1px 0 70px;
        overflow: hidden;
        text-align: center;
        font-size: 16px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        line-height: 20px;
        a {
            color: $gray;
            display: block;
            height: 200px;
            padding: 30px 0;
            text-decoration: none;
            
        }
        &__item {
            width: 25%;
            float: left;
            margin: 0 0 0 -1px;
            border:solid $borderGray;
            border-width: 1px 0 0 1px;
        }
        &__visual {
            height: 150px;
            margin: 0 0 5px;
            img {
                max-width: 100%;
            }
        }
    }
    &__btns {
        text-align: center;
    }
}
@media screen and (min-width: 1441px) {
    .brands {
        &-list__item {
            width: 20%;
        }
    }
}