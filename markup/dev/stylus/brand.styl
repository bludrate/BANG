.brand {
    &__title {
        margin: 0 0 43px;
        max-height: 130px;
        overflow: hidden;
        position: relative;
        &-visual {
            img {
                width: 100%;
                height: auto;
                vertical-align: top;
            }
        }
        &-info {
            position: absolute;
            z-index: 2;
            width: $wrapperWidth;
            left: 50%;
            top: 0;
            margin-left: -($wrapperWidth/2);
        }
        &-aligner {
            display: inline-block;
            vertical-align: middle;
            height: 128px;
            width: 0;
            overflow: hidden;
            margin: 0;
        }
    }
    &__logo {
        display: inline-block;
        vertical-align: middle;
        margin: 0 30px 0 12px;
        img {
            vertical-align: top;
        }
    }
    &__slogan {
        max-width: 400px;
        display: inline-block;
        vertical-align: middle;
        font-size: 18px;
        line-height: 24px;
        font-weight: normal;
        text-transform: uppercase;
        color:$gray;
        letter-spacing: 2px;
        img {
            vertical-align: top;
            margin-top: 4px;
        }
    }
    &__holder {
        padding: 0 0 42px;
        overflow: hidden;
    }
    &__sidebar-box {
        border: 1px solid $blue;
        margin: 29px 0 0 40px;
        float: right;
        width: 224px;
        line-height: 21px;
        font-size: 16px;
        padding: 35px 15px 27px 25px;
        &-text {
            margin: 0 0 24px;
        }
    }
    &__dl {
        margin: 0;
        letter-spacing: 0.5px;
        padding: 0 0 8px;
    }
    &__dt {
        float: left;
        color:$gray;
        margin: 0 8px 0 0;
        min-width: 70px;
    }
    &__dd {
        overflow: hidden;
        padding: 0 0 16px;
    }
    .category_left-filters .dot-title {
        margin-left: 17px;
    }
    &__content {
        overflow: hidden;
    }
}