.gallery {
	position: relative;
	padding-bottom: 77px;
	overflow: hidden;
	&__holder {
		width: $wrapperWidth;
		margin: 0 auto;
	}
	&__frame {
		position: relative;
		padding-bottom: 7px;
	}
	&__list {
		position: relative;
		list-style: none;
		overflow: hidden;
		margin: 0;
		padding: 0;
		left: 0;
		transition: left 0.4s ease-in-out;
	}
	&__item {
		float: left;
		position: relative;
		opacity: 0.6;
		transition: opacity 0.25s;
		&_active, &:hover {
			opacity: 1;
		}
		img {
			vertical-align: top;
		}
	}
	&__switchers {
		text-align: center;
		font-size: 0;
		line-height: 0;
		padding: 0;
		margin: 0;
		list-style: none;
		&-item {
			display: inline-block;
			vertical-align: top;
			position: relative;
			opacity: 0.6;
			margin: -2px;
			transition: opacity 0.25s;
			&_active {
				opacity: 1;
				margin-top: -4px;
				a {
					padding: 3px;
					border: 1px solid $blue;
				}
			}
			&:hover{
				opacity: 1;
			}
			a {
				display: block;
				padding: 4px;
			}
			img {
				vertical-align: top;
			}
		}
	}
}