.product-list {
	max-width: $maxWidth;
	margin: 0 auto 46px;
	list-style: none;
	padding: 0;
	position: relative;
	overflow: hidden;
	&__item {
		float: left;
	}
	&-btns {
		text-align: center;
	}
}
.product {
	overflow: hidden;
	position: relative;
	width: 33.3333333%;
	max-height: 369px;
	&_nav {
		height: 368px;
		width: 286px;
		float: right;
		margin: -2px -2px 0 0;
		.product__ico {
			left: 9px;
		}
		.product__visual img {
			width: auto;
			height: auto;
			min-height: 0;
		}
	}
	&_w2 {
		width: 66.666666%;
	}
	a {
		text-decoration: none;
	}
	&__info {
		position: absolute;
		bottom: 33px;
		text-align: center;
		left: 10px;
		right: 10px;
		z-index: 5;
		&_p2 {
			width: 45%;
			left: auto;
			bottom: auto;
			top: 84px;
			right: 50px;
		}
		&-box {
			display: inline-block;
			vertical-align: top;
			background:#fff;
			background: rgba(255,255,255,0.95);
			padding: 17px 25px 14px 25px;
			margin-bottom: -12px;
		}
	}
	&__title {
		font-size: 16px;
		line-height: 22px;
		font-weight: normal;
		display: block;
		text-transform: uppercase;
		margin: 0 0 11px;
		color: $darkColor2;
	}
	.product_w2 &__title {
		font-size: 18px;
		line-height: 22px;
		margin: 0 0 21px;
	}
	.product_w2 &__price {
		font-size: 20px;
		line-height: 24px;
	}
	&__price {
		color: $blue;
		font: 18px/22px "helveticaneuecyrroman", helvetica, arial, sans-serif;
		&-through {
			position: relative;
			display: inline-block;
			color: $gray2;
			&:after {
				content: '';
				display: block;
				position: absolute;
				left: 0;
				top: 0;
				right: 0;
				bottom: 0;
				bg("line-through.png", 50%, 50%);
			}
		}
		&-new { 
			margin: 0 0 0 15px;
		}
	}
	&__visual {
		img {
			width: 100%;
			height: auto;
		}
	}
	&__ico {
		position: absolute;
		left: 32px;
		top: 26px;
		text-indent: -9999px;
		overflow: hidden;
		&_sale {
			width: 77px;
			height: 77px;
			bg("ico06.png");
		}
		&_new {
			width: 76px;
			height: 75px;
			bg("ico07.png");
		}
	}
	&__controls {
		position: absolute;
		z-index: 10;
		top: 100px;
		text-align: center;
		width: 190px;
		left: 50%;
		display: none;
		margin-left: -95px;
	}
	&:hover &__controls {
		display: block;
	}
	&__hover {
		position: absolute;
		left: 0;
		right: 0;
		top: 0;
		z-index: 5;
		bottom: 0;
		display: none;
		background: #fff;
		opacity: 0.8;
	}
	&:hover &__hover {
		display: block;
	}
	.to-cart {
		display: block;
		text-align: left;
		padding-left: 65px;
		background-position: 28px 12px;
		margin-bottom: 15px;
	}
	&__in-cart {
		height: 48px;
		font: 18px/48px "helveticaneuecyrroman",helvetica, arial, sans-serif;
		color: $blue;
		padding: 0 5px 0 39px;
		display: block;
		overflow: hidden;
		text-overflow: ellipsis;
		bg('ico19.png',11px,14px);
		border: 1px solid $blue;
		margin-bottom: 15px;
	}
	&__compare-btn,
	&__in-compare {
		display: block;
		padding: 5px 0 5px 70px;
		bg("ico18.png",32px,2px);
		color: $textColor;
		text-decoration: none;
		font-size: 17px;
		line-height: 18px;
		text-align: left;
	}
	&__compare-btn:hover {
		color: $blue;
		background-position: 32px -76px;
	}
	&__in-compare {
		opacity: 0.6;
		padding-left: 60px;
		background-position: 26px 2px;
	}
}