.promo-slider {
	max-width: $maxWidth;
	margin: 0 auto 49px;
	position: relative;
	height: 515px;
	z-index: 3;
	background: #f2f2f2;
	.header + & {
		margin-top: -19px;
	}
	&__list {
		list-style: none;
		padding: 0;
		position: relative;
		margin: 0;
		width: 100%;
		height: 100%;
	}
	&__item {
		position: absolute;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		opacity: 0;
		transition: opacity 0.5s, z-index 0s 0.5s;
		overflow: hidden;
		&_active {
			z-index: 5;
			transition: z-index 0s 0.5s;
			opacity: 1;
		}
	}
	&__bg {
		position: absolute;
		left: 0;
		top: 0;
		overflow: hidden;
		width: 100%;
		height: auto;
		img {
			width: 100%;
			min-height: 100%;
			height: auto;
		}
	}
	&__info {
		width: $wrapperWidth;
		position: relative;
		z-index: 2;
		padding: 79px 0 0;
		margin: 0 auto;
		text-transform: uppercase;
		font-family: "helveticaneuecyrthin", helvetica, arial, sans-serif;;
	}
	&__discount {
		opacity: 0.9;
		font-size: 24px;
		line-height: 30px;
		color: $darkColor1;
		letter-spacing: 4px;
		margin-bottom: 13px;
	}
	&__title {
		margin: 0 0 36px;
		font-size: 40px;
		letter-spacing: 4px;
		max-height: 160px;
		line-height: 60px;
		color: $gray;
	}
	&__switchers {
		z-index: 5;
		position: absolute;
		height:122px;
		bottom: 0;
		width: ($wrapperWidth);
		left: 50%;
		margin-left: - ($wrapperWidth/2);
		&-border {
			content: '';
			position: absolute;
			z-index: 5;
			top: -1px;
			left: 0;
			right: 0;
			border-top: 1px solid #fff;
		}
		&-list {
			list-style: none;
			margin: 0;
			padding: 0;
		}
	}
	&__progress {
		position: absolute;
		left: 0;
		top: -1px;
		height:3px;
		border: 1px solid #fff;
		text-indent: -9999px;
		overflow: hidden;
		z-index: 10;
		width: 33.333333%;
		background:#eee;
		background: rgba(255,255,255,0.4);
		&-amount {
			display: block;
			background: #fff;
		}
	}
	&__switch-item {
		float: left;
		width: 33.3333333333%;
		text-transform: uppercase;
	}
	&__switch-item_active &__switch-text,
	&__switch-item_active &__switch-title{
		opacity: 1;
	}
	&__switch-title {
		color: $darkColor2;
		margin-bottom: 6px;
		display: block;
		letter-spacing: 3px;
		opacity: 0.5;
		font: 16px/24px "helveticaneuecyrthin", helvetica, arial, sans-serif;
	}
	&__switch-text {
		letter-spacing: 2px;
		font-size: 17px;
		opacity: 0.5;
		line-height: 24px;
		display: block;
	}
	&__switch-holder {
		display: block;
		padding: 22px 15px 0 43px;
		height: 100px;
		text-decoration: none;
		cursor: pointer;
		bg("none.gif",0,0,repeat);
		color: $textColor;
		position: relative;
	}
	&__switch-holder:hover &__switch-item-border {
		content: '';
		position: absolute;
		left: -8px;
		right: -8px;
		top: -11px;
		bottom: -12px;
		border: 1px solid $borderBlue;
	}
}